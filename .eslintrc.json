{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "linebreak-style": ["error", "windows"],
        "indent": "off",
        "no-console": "off",
        "no-restricted-globals": ["error", "event", "fdescribe"],
        "no-underscore-dangle" : "off",
        "no-undef" : "off",
        "comma-dangle": ["error", "off"],
        "import/prefer-default-export": "off"
    }
}
